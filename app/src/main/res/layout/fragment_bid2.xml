                    android:id="@+id/boards_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_gravity="top"
                    android:gravity="top" />
            </LinearLayout>
